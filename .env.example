# Database
DATABASE_URL="postgresql://ivm_user:ivm_password@localhost:5432/ivm_db"

# Email Configuration - Choose ONE of the following options:

# Option 1: Connection String (Recommended - matches reference app)
EMAIL_SERVER="smtps://username:password@smtp.example.com:465"
EMAIL_FROM="Indian Village Manor <noreply@indianvillagemanor.com>"

# Option 2: Individual Fields (Alternative)
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT="587"
# EMAIL_SECURE="false"
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"
# EMAIL_FROM="Indian Village Manor <noreply@indianvillagemanor.com>"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-long-random-string-in-production"

# Session
SESSION_SECRET="replace-with-long-random-string-in-production"

# Magic Link
MAGIC_LINK_EXPIRY_MINUTES="15"

# SSO / OAuth (Optional - leave blank to disable)
# Google OAuth - Get credentials from https://console.cloud.google.com/
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft / Azure AD OAuth - Get credentials from https://portal.azure.com/
# AZURE_AD_CLIENT_ID="your-azure-client-id"
# AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
# AZURE_AD_TENANT_ID="common"  # Use 'common' for any Microsoft account, or your tenant ID
